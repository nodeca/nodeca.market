- self.users = self.users || {};
- self.sections_by_id = self.sections_by_id || {};

//- show many operations checkbox
- var multiselect_allowed = false;

each item in self.items
  if (self.ignored_users[item.user] && !self.settings.market_show_ignored)
    //- skip entries created by ignored users

  else
    - var section = self.sections_by_id[item.section] || {};

    li.market-search-buy-item(
      id='item' + item.hid
      class=(self.ignored_users[item.user]) ? 'market-search-buy-item__m-ignored' : ''
      data-item-id=item._id
      data-item-hid=item.hid
    )
      a.market-search-buy-item__photo.thumb.thumb__m-market(href=self.link_to('market.item.buy', { section_hid: section.hid, item_hid: item.hid }))
        if item.files && item.files.length > 0
          img.thumb__image(src=self.link_to('core.gridfs', { bucket: item.files[0] + '_sm' }))
        else
          .thumb__content= self.t('no_photo')
      .market-search-buy-item__info
        .market-search-buy-item__title
          a.market-search-buy-item__title-text(href=self.link_to('market.item.buy', { section_hid: section.hid, item_hid: item.hid }))
            = item.title
          if !item.is_new
            sub.market-search-buy-item__icon
              = ' '
              = self.t('used')

        .market-search-buy-item__price
          - var price = item.price || {};
          = self.price(price.value, price.currency, self.settings.market_displayed_currency, self.currency_rates[price.currency])

          if item.barter_info
            = ' '
            //- TODO: icon-exchange
            span.market-search-buy-item__icon.icon.icon-track-normal(title=self.t('icon_exchange'))

        .market-search-buy-item__location
          if item.location
            a.market-search-buy-item__location-link(
              href= '#'
              data-on-click= 'common.blocks.location_show_dlg'
              data-latitude= item.location && item.location[1]
              data-longitude= item.location && item.location[0]
            )
              span.icon.icon-location.icon-space-after

              if self.location_names[item.location[0] + ':' + item.location[1]]
                = self.location_names[item.location[0] + ':' + item.location[1]]

          if item.delivery
            = ' '
            //- TODO: icon-delivery
            span.market-search-buy-item__icon.icon.icon-track-tracking(title=self.t('icon_delivery'))

        .market-search-buy-item__details
          .market-search-buy-item__details-item!= self.timetag(item.ts, 'relative')
          .market-search-buy-item__details-item
            - var user = self.users[item.user];
            if user
              a.market-search-buy-item__user-link._ucard-popover(
                href=self.link_to('users.member', { user_hid: user.hid })
                data-user-id=user._id
                data-user-ref='market_search_buy_item:'+section.hid+':'+item.hid
              )
                span.market-search-buy-item__ignored-mark.icon.icon-ignore.icon-space-after
                = user.name
          .market-search-buy-item__details-item
            a.market-search-buy-item__section-link(
              href=self.link_to('market.section.buy', { section_hid: section.hid })
            )
              = section.title

      if multiselect_allowed
        label.market-search-buy-item__select(title=self.t('multiselect_hint'))
          input.market-search-buy-item__select-cb(
            type='checkbox'
            data-item-id=item._id
            data-on-change='market.search.buy:item_check'
          )
