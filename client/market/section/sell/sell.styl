@import "nodeca.core/client/common/_variables"

.market-section-sell__head
  display flex

.market-section-sell__title
  flex 1 1 0%

.market-section-sell__subsections
  margin-top 1rem

.market-section-sell__subsection:before
  content '/ '
  font-family monospace

.market-section-sell__subsection.market-section-sell__linked:before
  content 'â†’ '
  font-family monospace

.market-section-sell__subsection-title
  color $body-color

.market-section-sell__subsection-count
  color $body-color-secondary
  vertical-align sub
  font-size $font-size-xs

.market-section-sell__item-list
  margin 0
  padding 0
  list-style none

.market-section-sell__loading-prev
.market-section-sell__loading-next
  padding 2rem
  font-size 4rem
  line-height 1.1em
  text-align center
  background-color $body-bg-secondary
  color $body-color-secondary + 50%
  border-radius 4px
  margin-bottom 2rem
  margin-top 1rem
  clear both
