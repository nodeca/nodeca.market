@import "nodeca.core/client/common/_variables"

.market-section-sell__head
  display flex

.market-section-sell__title
  flex 1 1 0%

.market-section-sell__subsections
  margin-top 1rem

.market-section-sell__subsection:before
  content '/ '
  font-family monospace

.market-section-sell__subsection.market-section-sell__linked:before
  content 'â†’ '
  font-family monospace

.market-section-sell__subsection-title
  color $body-color

.market-section-sell__subsection-count
  color $body-color-secondary
  vertical-align sub
  font-size $font-size-xs

.market-section-sell__select-order
  float right
  width auto
  margin-top 1rem

.market-section-sell__item-list
  margin 0
  padding 0
  list-style none

.market-section-sell-item
  display flex
  margin-top 1rem

.market-section-sell-item__info
  margin-left 1rem

.market-section-sell-item__title
.market-section-sell-item__price
  font-size $font-size-lg

.market-section-sell-item__location-link
.market-section-sell-item__user-link
  color $body-color-secondary

.market-section-sell-item__details
  color $body-color-secondary
  margin 0
  padding 0
  list-style none

.market-section-sell-item__details-item
  display inline

.market-section-sell-item__details-item + .market-section-sell-item__details-item
  &:before
    content ' | '

.market-section-sell-item__icon
  color $body-color-secondary
