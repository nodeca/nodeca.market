@import "nodeca.core/client/common/_variables"

.market-section-buy__head
  display flex

.market-section-buy__title
  flex 1 1 0%

.market-section-buy__subsections
  margin-top 1rem

.market-section-buy__subsection:before
  content '/ '
  font-family monospace

.market-section-buy__subsection.market-section-buy__linked:before
  content 'â†’ '
  font-family monospace

.market-section-buy__subsection-title
  color $body-color

.market-section-buy__subsection-count
  color $body-color-secondary
  vertical-align sub
  font-size $font-size-xs

.market-section-buy__select-order
  float right
  width auto
  margin-top 1rem

.market-section-buy__item-list
  margin 0
  padding 0
  list-style none

.market-section-buy-item
  margin-top 1rem

.market-section-buy-item__title
  font-size $font-size-lg

.market-section-buy-item__location-link
.market-section-buy-item__user-link
  color $body-color-secondary

.market-section-buy-item__details
  color $body-color-secondary
  margin 0
  padding 0
  list-style none

.market-section-buy-item__details-item
  display inline

.market-section-buy-item__details-item + .market-section-buy-item__details-item
  &:before
    content ' | '
