article#content.market-section-buy
  != self.partial('@common.blocks.navbar.logo_apps')

  nav.breadcrumbs-container
    .layout__container.container-fluid
      != self.partial('@common.blocks.breadcrumbs')

  .layout__container.container-fluid
    != self.partial('@users.blocks.announces')
    != self.partial('@market.blocks.drafts')

    header.page-head.market-section-buy__head
      h1.market-section-buy__title.page-head__title(itemprop='name')= self.section.title

      != self.partial('@market.section.buy.blocks.toolbar_controls')

    != self.partial('@market.blocks.search_form')

    select.market-section-buy__select-order.form-control.custom-select
      option(selected)= self.t('order_by_date')
    
    .market-section-buy__subsections
      each section in self.subsections
        .market-section-buy__subsection(
          class=section.is_linked ? 'market-section-buy__linked' : ''
        )
          a.market-section-buy__subsection-title(
            href=self.link_to('market.section.buy', { section_hid: section.hid })
          )= section.title

          span.market-section-buy__subsection-count
            = ' '
            = '0'

    ul.market-section-buy__item-list
      each item in self.items
        li.market-section-buy-item(id='item' + item.hid)
          .market-section-buy-item__title
            a.market-section-buy-item__title-text(href=self.link_to('market.item.buy', { section_hid: self.section.hid, item_hid: item.hid }))
              = item.title

          .market-section-buy-item__location
            if item.location
              a.market-section-buy-item__location-link(
                href= '#'
                data-on-click= 'common.blocks.location_show_dlg'
                data-latitude= item.location && item.location[1]
                data-longitude= item.location && item.location[0]
              )
                span.icon.icon-location.icon-space-after

                if self.location_names[item.location[0] + ':' + item.location[1]]
                  = self.location_names[item.location[0] + ':' + item.location[1]]

          .market-section-buy-item__details
            .market-section-buy-item__details-item!= self.timetag(item.ts, 'relative')
            .market-section-buy-item__details-item
              - var user = self.users[item.user];
              if user
                a.market-section-buy-item__user-link._ucard-popover(
                  href=self.link_to('users.member', { user_hid: user.hid })
                  data-user-id=user._id
                  data-user-ref='market_section_buy_item:'+self.section.hid+':'+item.hid
                )
                  = user.name
