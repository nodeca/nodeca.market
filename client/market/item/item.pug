      .market-item__price= '11 600 ₽'

      .market-item__info
        .market-item__info-item= '10 Aug'
        .market-item__info-item= 'username'

    ul.market-item__attach-list.thumb-grid.thumb-grid__m-fluid
      li.market-item__attach-item.thumb-grid__item
        .thumb-grid__item-inner
          .thumb
            img.thumb__image(src=self.link_to('core.gridfs', { bucket: '5b51f0e9ad5e67256238bed8_sm' }))

      li.market-item__attach-item.thumb-grid__item
        .thumb-grid__item-inner
          .thumb
            img.thumb__image(src=self.link_to('core.gridfs', { bucket: '5b51f0e9ad5e67256238bed8_sm' }))

